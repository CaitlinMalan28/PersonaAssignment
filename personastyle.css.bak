@import url('https://fonts.googleapis.com/css2?family=Italiana&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
  
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    text-decoration: none;
    border: none;
    outline: none;
    scroll-behavior: smooth;
	font-family: 'Roboto', sans-serif;
}

:root{
    --bg-color: #E8E5E0;
    --second-bg-color: #FFFFFF;
    --text-color: #20140D;
    --main-color: #B48863;
}

html{
	-moz-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
	text-size-adjust: 100%;
	color: black;
	overflow-x: hidden;
}

header{
	position: fixed;
	top: 0;
	left: 0;
    width: 100%;
	background: var(--second-bg-color) ;
	display: flex;
	align-items: center;
	text-align: center;
	justify-content: center;
	z-index: 100;
}

#menu{
	font-size: 25pt;
	align-items: left;
	text-align: left;
	justify-content: left;
	
}

#logo{
	font-size: 22pt;
	font-weight: bold;
	font-family: 'Italiana', serif;
	letter-spacing: 2pt;
	color: var(--text-color);
}

#symbol{
	font-size: 22pt;
	color: var(--text-color);
	border: 2pt solid #57370d;
	border-radius: 28rem;
	padding: 4pt;
	margin: 0.5rem 2pt;
}

.navbar a{
	font-size: 10pt;
	font-weight: 500;
	color: var(--text-color);
	padding: 0 2.5rem;
}

.home{
	background: var(--bg-color);
    display: flex;
    align-items: center;
	justify-content: left;
	padding-left: 1rem;
	top: 0;
	min-height: 100vh;
}

#jewel-sildeshow> * {
	visibility: hidden; 
	position: absolute;
	top: 0; 
	left: 0; 
	animation: 12s autoplay1 infinite ;
}
  
  @keyframes autoplay1 {
  0% {visibility: visible}
  33.33% {visibility: hidden}
}

#jewel-sildeshow > *:nth-child(1) {animation-delay: 0s}
#jewel-sildeshow > *:nth-child(2) {animation-delay: 4s}
#jewel-sildeshow > *:nth-child(3) {animation-delay: 8s}

#jewel-sildeshow img{
	float: left;
	position: relative;
	margin: 0;
	padding: 0;
	width: 650;
	height: 650;
	border-right: 4.5pt solid var(--second-bg-color);
}

.home-content{
	background: var(--bg-color)
	text-align: center;
	align-items: center;
	justify-content: center;
	padding: 2rem 0;
	padding-left: 40rem;
	margin: 0 4rem;
}

.subtitle{
	color: var(--text-color);
}

.main-title{
	font-size: 60pt;
	font-family: 'Italiana', serif;
	color: var(--text-color);
}

.btn{
	font-size: 14pt;
	font-weight: 500;
	margin-top: 4rem;
}

.btn-first{
	border: 2pt solid var(--text-color);
	border-radius: 0.2rem;
	padding: 0.5rem;
	margin: 1rem;
	background:var(--text-color);
	color: var(--bg-color);
	box-shadow: 0 4px 8px 0  rgba(61, 61, 61, 0.4);
}

.btn-first:hover{
	background: var(--bg-color);
	color: var(--text-color);
	transition: .8s;
}

.btn-second{
	border: 2pt solid var(--text-color);
	border-radius:	0.2rem;
	padding: 0.5rem;
	margin: 1rem;
	background: var(--bg-color);
	color: var(--text-color);
	box-shadow: 0 4px 8px 0  rgba(61, 61, 61, 0.4);
}

.btn-second:hover{
	background:var(--text-color);
	color: var(--bg-color);
	transition: .8s;
}

footer{
	column-count: 3;
	padding: 1rem;
	margin: 1rem;
	display: flex;
	justify-content: center;
}

footer li{
	padding: 0.5rem 4rem;
	list-style: none;
}

.footer-social-media{
	display: inline-flex;
	font-size: 18pt;
	padding: 0.5rem 4rem;
}

.footer-social-media p{
	padding: 4pt;
	text-align: left;
}

.copyright-claims{
	border-top: 0.2pt solid black;
	text-align: center;
	padding: 0.6rem 0;
	margin: 0;
	font-size: 10pt
}





.list-modification{
	display: inline-flex;
	
}

.products{
	background: var(--bg-color);
	display: flex;
    align-items: center;
	justify-content: center;
	padding: 4rem 0;
}

.products-content{
	padding-top: -4rem;
}

.products-content h1{
	font-size: 18pt;
	font-family: 'Italiana', serif;
	color: var(--text-color);
	padding: 0.5rem;
	margin: 2rem 0;
	border-bottom: 1pt solid var(--text-color);
}

.products-content h2{
	color: var(--text-color);
	font-size: 13pt;
	padding: 0.3rem 0.5rem;
}

.products-content li{
	margin: 0 1rem;
	list-style: none;
}

.card img{
	margin: 1rem;
	width: 100px;
	height: 150px;
	background: var(--second-bg-color);
}

.card {
	background: transparent;
	text-align: left;
	margin: 0 1rem;
}

.price {
	color: #5B4533;
	font-size: 10pt;
	padding: 0.3rem 0.5rem;
}

.card button {
  padding: 10px;
  color: white;
  background-color: #000;
  text-align: center;
  justify-content: center;
  float: center;
  cursor: pointer;
  font-size: 10pt;
  width: 100px;
  heght: 30px
}

.card button:hover {
	background: var(--text-color);
	color: var(--bg-color);
	transition: .8s;
}

.order{
	display: flex;
    align-items: center;
	justify-content: center;
	padding-left: 8rem;
	padding-top: 3rem;
	top: 0;
	min-height: 100vh;
}




.contact{
	background: url('personacontactbg.png') no-repeat;
    background-size: cover;
    background-position:center;
	display: flex;
    align-items: center;
	justify-content: left;
	padding-left: 8rem;
	padding-top: 3rem;
	top: 0;
	min-height: 100vh;
	
}



.contact-content{
	float: center;
	align-items: center;
	justify-content: center;
}

.contact-infomation{
	float: left;
	background: var(--main-color);
	padding: 3rem 0;
	padding-left: 3rem;
	padding-right: 4rem;
	margin: 4rem 2rem;
	border: 2pt solid var(--text-color);
	border-radius:	0.5rem;
}

.contact-infomation h1{
	font-size: 18px;
	font-weight: bold;
	font-family: 'Italiana', serif;
	border-bottom: 1pt solid var(--text-color);
	margin-bottom: 1.5rem;
}

.contact-infomation h2{
	font-size: 12pt;
	font-weight: 600;
	margin-top: 3.5rem;
}

.contact-infomation p{
	font-size: 10pt;
}

.social-media li{
	display: inline-flex;
	list-style: none;
	font-size: 28pt;
	margin-right: 0.2rem;
}

.customer-inquiry{
	position: relative;
	display: inline-flex;
	float: right;
	align-items: right;
	justify-content: right;
	margin: 0 4rem;
	margin-top: 10.5rem;
	color: var(--text-color);
}

.customer-inquiry li{
	list-style: none;
}

.customer-inquiry input{
	font-size: 12pt;
	color: var(--text-color);
	background: var(--second-bg-color);
	border: 2pt solid var(--text-color);
	border-radius:	0.5rem;
	padding: 0.3rem 3rem;
	padding-left: 1rem;
	margin: 0.5rem 1rem;
}

#email{
	width: 94.5%;
}

::placeholder { 
  color: grey;
} 

.customer-inquiry textarea{
	width: 94.5%;
	font-size: 12pt;
	color: var(--text-color);
	background: var(--second-bg-color);
	border: 2pt solid var(--text-color);
	border-radius: 0.5rem;
	padding: 0.3rem 1rem;
	margin: 0.5rem 1rem;
	resize: none;
}

.customer-inquiry form{
	display: inline-flex;
	font-size: 12pt;
	color: grey;
	background: var(--second-bg-color);
	border: 2pt solid var(--text-color);
	border-radius: 0.5rem;
	padding: 0.3rem 1rem;
	margin: 0.5rem 1rem;
}

.customer-inquiry p{
	margin-right: 20rem;
}

.customer-inquiry select{
	font-size: 12pt;
	color: var(--text-color);
	background: transparent;
}

.customer-inquiry option{
	background: var(--second-bg-color);
	color: var(--text-color);
}

.customer-inquiry button{
	font-size: 12pt;
	display: flex;
	color: var(--text-color);
	background: var(--second-bg-color);
	border: 2pt solid var(--text-color);
	border-radius: 0.5rem;
	padding: 0.3rem 1rem;
	margin-top: 0.5rem;
	margin-left: 1rem;
}

.customer-inquiry button:hover{
	color: var(--text-color);
	background:var(--main-color);
	transition: .6s;
}












